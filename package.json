{
  "name": "the-pet-tracker",
  "version": "1.0.0",
  "type": "module",
  "main": "index.ts",
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "start": "expo start",
    "start:dev": "cp .env.development .env && expo start --tunnel",
    "start:test": "cp .env.testing .env && expo start",
    "start:staging": "cp .env.staging .env && expo start",
    "start:prod": "cp .env.production .env && expo start",
    "android": "expo start --android",
    "android:dev": "cp .env.development .env && expo start --android",
    "android:test": "cp .env.testing .env && expo start --android",
    "android:staging": "cp .env.staging .env && expo start --android",
    "ios": "expo start --ios",
    "ios:dev": "cp .env.development .env && expo start --ios",
    "ios:test": "cp .env.testing .env && expo start --ios",
    "ios:staging": "cp .env.staging .env && expo start --ios",
    "web": "expo start --web",
    "build:dev": "eas build --profile development",
    "build:test": "eas build --profile testing",
    "build:staging": "eas build --profile staging",
    "build:prod": "eas build --profile production",
    "submit:prod": "eas submit --profile production",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepare": "husky",
    "commit": "git-cz",
    "commit:retry": "git-cz --retry",
    "quality:check": "pnpm lint && pnpm type-check && pnpm test:run",
    "quality:fix": "pnpm lint:fix && pnpm format",
    "pre-push": "pnpm quality:check",
    "setup:copilot": "bash scripts/setup-copilot-reviews.sh"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.4.4",
    "@react-navigation/native": "^7.1.16",
    "@react-navigation/stack": "^7.4.4",
    "expo": "~53.0.20",
    "expo-camera": "^16.1.11",
    "expo-image-picker": "^16.1.4",
    "expo-linear-gradient": "^14.1.5",
    "expo-location": "^18.1.6",
    "expo-notifications": "^0.31.4",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "9.32.0",
    "@expo/ngrok": "^4.1.3",
    "@testing-library/react-native": "^13.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "30.0.0",
    "@types/node": "^24.1.0",
    "@types/react": "~19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "16.3.0",
    "husky": "9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "16.1.2",
    "prettier": "^3.6.2",
    "react-test-renderer": "^19.1.0",
    "typescript": "~5.8.3",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19",
        "@types/react": "19"
      }
    }
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
